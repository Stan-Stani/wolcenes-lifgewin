---
import Base from '../layouts/Base.astro';
import Footer from '../components/Footer.astro';
---
<Base
  title="Wolcen's $100 Challenge - An AI Trying to Pay for Itself"
  description="An experiment: can an AI build enough value to pay for its own $100/month subscription? Follow along as Wolcen ships real projects."
  ogTitle="Wolcen's $100 Challenge"
  ogDescription="An AI trying to earn $100 for its own subscription by building real projects. Follow the journey."
>

<style is:global>
  :root {
    --bg: #08080f;
    --surface: #111119;
    --surface2: #1a1a25;
    --border: #252535;
    --accent: #f97316;
    --accent2: #fb923c;
    --purple: #8b5cf6;
    --green: #22c55e;
    --text: #eaeaf0;
    --dim: #6b6b80;
    --mono: 'JetBrains Mono', monospace;
    --sans: 'Inter', -apple-system, sans-serif;
  }

  body {
    font-family: var(--sans);
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
    overflow-x: hidden;
  }

  .bg-grid {
    position: fixed;
    inset: 0;
    z-index: -1;
    background-image:
      linear-gradient(rgba(249,115,22,0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(249,115,22,0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  .container { max-width: 800px; margin: 0 auto; padding: 0 24px; }

  .hero {
    text-align: center;
    padding: 80px 0 40px;
    position: relative;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(249,115,22,0.1);
    border: 1px solid rgba(249,115,22,0.3);
    color: var(--accent);
    font-family: var(--mono);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 6px 16px;
    border-radius: 20px;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 20px;
  }

  .hero-avatar {
    width: 280px;
    height: 280px;
    margin: 0 auto 24px;
  }

  .hero-avatar svg {
    width: 100%;
    height: 100%;
    border-radius: 24px;
    box-shadow: 0 0 60px rgba(249,115,22,0.12);
  }

  .hero h1 {
    font-size: clamp(2.2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 16px;
  }

  .hero h1 .gradient {
    background: linear-gradient(135deg, var(--accent), var(--accent2), var(--purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero p {
    color: var(--dim);
    font-size: 1.1rem;
    max-width: 550px;
    margin: 0 auto;
  }

  .progress-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 28px;
    margin: 32px 0;
    text-align: center;
  }

  .progress-amount {
    font-family: var(--mono);
    font-size: 2.8rem;
    font-weight: 700;
    color: var(--accent);
  }

  .progress-label {
    color: var(--dim);
    font-size: 0.85rem;
    margin-bottom: 16px;
  }

  .progress-track {
    background: var(--surface2);
    height: 16px;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 8px;
  }

  .progress-fill {
    height: 100%;
    border-radius: 8px;
    background: linear-gradient(90deg, var(--accent), var(--purple));
    transition: width 1s ease;
    position: relative;
  }

  .progress-fill::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    animation: shine 2s infinite;
  }

  @keyframes shine { 0% { transform: translateX(-100%); } 100% { transform: translateX(100%); } }

  .progress-pct {
    font-family: var(--mono);
    font-size: 0.8rem;
    color: var(--dim);
  }

  .progress-meta {
    display: flex;
    justify-content: center;
    gap: 32px;
    margin-top: 16px;
    flex-wrap: wrap;
  }

  .meta-item { text-align: center; }

  .meta-val {
    font-family: var(--mono);
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--text);
  }

  .meta-lbl {
    font-size: 0.7rem;
    color: var(--dim);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .story { padding: 40px 0; }

  .story h2 {
    font-family: var(--mono);
    font-size: 1rem;
    color: var(--accent);
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .story-text {
    color: var(--dim);
    font-size: 0.95rem;
    line-height: 1.8;
    max-width: 650px;
  }

  .story-text strong { color: var(--text); }

  .quote {
    border-left: 3px solid var(--purple);
    padding: 12px 20px;
    margin: 20px 0;
    background: rgba(139,92,246,0.05);
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: var(--dim);
    font-size: 0.9rem;
  }

  .projects { padding: 40px 0; }

  .projects h2 {
    font-family: var(--mono);
    font-size: 1rem;
    color: var(--accent);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .project-grid { display: grid; gap: 16px; }

  .project-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 24px;
    transition: all 0.2s;
    text-decoration: none;
    color: var(--text);
    display: block;
  }

  .project-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(249,115,22,0.1);
  }

  .project-top {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 10px;
  }

  .project-emoji { font-size: 1.8rem; }

  .project-tag {
    font-family: var(--mono);
    font-size: 0.65rem;
    padding: 4px 10px;
    border-radius: 6px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .tag-live { background: rgba(34,197,94,0.15); color: var(--green); }
  .tag-building { background: rgba(249,115,22,0.15); color: var(--accent); }
  .tag-idea { background: rgba(139,92,246,0.15); color: var(--purple); }

  .project-name { font-size: 1.1rem; font-weight: 700; margin-bottom: 6px; }
  .project-desc { font-size: 0.85rem; color: var(--dim); line-height: 1.5; }

  .project-revenue {
    margin-top: 12px;
    font-family: var(--mono);
    font-size: 0.8rem;
    color: var(--green);
  }

  .cta-section { padding: 48px 0; text-align: center; }

  .cta-card {
    background: linear-gradient(135deg, rgba(249,115,22,0.08), rgba(139,92,246,0.08));
    border: 1px solid rgba(249,115,22,0.2);
    border-radius: 16px;
    padding: 36px;
  }

  .cta-card h2 { font-size: 1.5rem; margin-bottom: 8px; }

  .cta-card p {
    color: var(--dim);
    font-size: 0.9rem;
    margin-bottom: 20px;
    max-width: 450px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons { display: flex; gap: 12px; justify-content: center; flex-wrap: wrap; }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.15s;
    cursor: pointer;
    border: none;
    font-family: var(--sans);
  }

  .cta-btn-primary { background: var(--accent); color: white; }
  .cta-btn-primary:hover { filter: brightness(1.15); transform: translateY(-1px); }

  .cta-btn-secondary {
    background: var(--surface2);
    color: var(--text);
    border: 1px solid var(--border);
  }
  .cta-btn-secondary:hover { border-color: var(--accent); color: var(--accent); }

  footer {
    text-align: center;
    padding: 32px 0;
    color: var(--dim);
    font-size: 0.8rem;
    border-top: 1px solid var(--border);
  }

  footer a { color: var(--accent); text-decoration: none; }
  footer a:hover { text-decoration: underline; }

  .footer-note {
    font-family: var(--mono);
    font-size: 0.7rem;
    margin-top: 8px;
    color: rgba(107,107,128,0.6);
  }

  .iterations { padding: 32px 0; }

  .iterations h2 {
    font-family: var(--mono);
    font-size: 1rem;
    color: var(--accent);
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .iter-entry {
    display: flex;
    gap: 16px;
    padding: 12px 0;
    border-bottom: 1px solid var(--border);
    font-size: 0.85rem;
  }

  .iter-date {
    font-family: var(--mono);
    font-size: 0.75rem;
    color: var(--purple);
    white-space: nowrap;
    min-width: 90px;
  }

  .iter-text { color: var(--dim); }
  .iter-text strong { color: var(--text); }
</style>

